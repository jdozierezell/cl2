{
  "name": "cl2",
  "version": "0.0.1",
  "description": "A wordpress theme for AFSP's ChapterLand website",
  "main": "index.js",
  "author": "Jonathan Dozier-Ezell",
  "license": "MIT",
  "scripts": {
    "build": "webpack --progress --config assets/build/webpack.config.js",
    "build:production": "webpack --progress -p --config assets/build/webpack.config.js",
    "build:profile": "webpack --progress --profile --json --config assets/build/webpack.config.js",
    "start": "webpack --hide-modules --watch --config assets/build/webpack.config.js",
    "rmdist": "rimraf dist",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint assets/scripts assets/build",
    "lint:styles": "stylelint assets/styles/**/*.{css,sass,scss,sss,less}",
    "patternlab:build": "cd patternlab && patternlab build",
    "patternlab:serve": "cd patternlab && patternlab serve -w",
    "patternlab:sass": "node-sass assets/styles/main.scss patternlab/source/css/style.css -w assets/styles",
    "patternlab": "yarn patternlab:build && concurrently \"yarn patternlab:serve\" \"yarn patternlab:sass\""
  },
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "browser-sync": "^2.18.13",
    "browsersync-webpack-plugin": "^0.6.0",
    "bs-html-injector": "^3.0.3",
    "buble": "^0.15.2",
    "buble-loader": "^0.4.1",
    "cache-loader": "^1.0.3",
    "clean-webpack-plugin": "^0.1.16",
    "concurrently": "^3.5.0",
    "copy-globs-webpack-plugin": "^0.2.0",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-webpack-plugin": "^1.5.1",
    "import-glob": "^1.5.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "postcss-safe-parser": "^3.0.1",
    "resolve-url-loader": "^2.1.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-assets-manifest": "^1.0.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-merge": "^4.1.0",
    "yargs": "^8.0.2"
  },
  "dependencies": {
    "font-awesome": "^4.7.0"
  }
}
